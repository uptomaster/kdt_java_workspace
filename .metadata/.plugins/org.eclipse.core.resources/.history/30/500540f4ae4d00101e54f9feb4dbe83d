package array;
// 5번 : 배열 사용(저장공간과 값)
public class ArrayTest03 {
	public static void main(String[] args) {
		int[] arData = {'5', 2, 6, 4};
		System.out.println(arData); // 배열의 시작주소값(참조값)
		System.out.println(arData[0]);
		System.out.println(arData);
		System.out.println(arData.length); // 배열의 길이값
		
		System.out.println(arData[0]); // 
		System.out.println(arData[1]); // 
		System.out.println(arData[2]); // 
		System.out.println(arData[3]); // 
		
		for(int i = 0; i < arData.length; i++ ) {
			// 조건식에 배열의 길이값을 넣으면, 직접 길이를 구하지 않아도 된다.
			System.out.println(arData[i]);
		}
		
		arData[0] = arData[1] + arData[3]; // 저장공간 <- 값 + 값 
		System.out.println(arData[0]);
		
		int[] arData2 = new int[10];
		// 값 대입 반복문
		for(int i = 0; i < arData2.length; i++) {
			arData2[i] = i+1; // 1 ~ 10까지 각 저장공간에 저장.
		}
		
		// 출력 반복문
		for(int i = 0; i < arData2.length; i++) {
			System.out.println("arData2[] 배열의 각 저장공간별 값 출력");
			System.out.printf(arData2[i] + " "); // 1 ~ 10까지 출력.
		}
		
		
	}
}
