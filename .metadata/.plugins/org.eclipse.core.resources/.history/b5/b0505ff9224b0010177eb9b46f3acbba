package scanner;
// 5번 : 입력클래스(Scanner)

import java.util.Scanner;
public class ScannerTest01 {

	public static void main(String[] args) {
//		System.out.println();
//		String name = "이남혁";
		
		// 입력 클래스
		// 입력 메소드를 사용하기 위해서 아래 코드 한줄이 반드시 작성되어야한다.
		Scanner sc = new Scanner(System.in);
		System.out.println("이름 입력 : ");
		String name = sc.next(); // next() 입력 메소드 : 콘솔창에서 입력을 받고 그 입력값을 String 타입으로 가져오는 기능을 한다.
		System.out.println(name + "님, 환영합니다!");
		
		
		
	}

}
