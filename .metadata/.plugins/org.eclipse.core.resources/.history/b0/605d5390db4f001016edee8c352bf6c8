package array;
// 4번 : 2차원 배열과 for문, for-each문
public class TwoArrayTest02 {

	public static void main(String[] args) {
		int[][] arr1 = {{1,2}, {3,4}, {5,6}, {7,8}};
		
		System.out.println(arr1.length); // arr1의 행
		System.out.println(arr1[0].length); // arr1의 열
		
		System.out.println(arr1); // 2차원 배열의 전체 시작주소값
		System.out.println(arr1[0]); // 2차원 배열의 0행의 시작주소값
		System.out.println(arr1[1]); // 2차원 배열의 1행의 시작주소값
		System.out.println(arr1[2]); // 2차원 배열의 2행의 시작주소값
		System.out.println(arr1[3]); // 2차원 배열의 3행의 시작주소값
		
		System.out.println(arr1[0][0]);
		System.out.println(arr1[0][1]);
		System.out.println(arr1[1][0]);
		System.out.println(arr1[1][1]);
		
		for(int i = 0; i < arr1.length; i++) {
//			System.out.println(i); // i는 행의 인덱스번호
//			System.out.println(arr1[i]);
			for(int j = 0; j < arr1[i].length; j++) {
				System.out.print(arr1[i][j]);
			}
			System.out.println();
		}
	}

}
