package twoForTest;
// 3번 : 배열 선언 및 생성
public class ArrayTest01 {
	public static void main(String[] args) {
		
//		배열의 선언
//		변수선언 : 자료형 변수명 = 값;

//		배열선언
//		1) 배열변수를 선언 후, 배열을 생성하는방법.
//		-> 지금 당장 어떤 값을 넣을지는 모르지만, 배열의 크기는 정해졌을때 사용.
//		자료형[ ] 배열명 = new 자료형[ 크기 ]; 
//		ex) int [ ] arr1 = new int[5]; # 어떤 값을 넣을지 모르지만, 5칸 짜리 정수형 배열
		int[] number1 = new int[5];
		
//		2) 배열변수선언과 함께 초기화하는방법.
//		-> 어떤 값을 넣을 지 정해졌을때 사용.
//		자료형[ ] 배열명 = { 값1, 값2, ..., 값10};
//		ex) int[ ] arr2 = {1, 2, 3, 4}; 
		// 문자열 배열변수 alpha로 선언하고, a~c까지 값을 넣어주자.
		String[] alpha = {"a", "b", "c"};
		
//		3) 배열을 생성하지 않고, 배열 변수를 초기화하는방법.
//		-> 어떤 값을 넣을지 모르고, 배열의 크기도 정해지지 않았을때
//		자료형[ ] 배열명 = null;
//		ex) int[ ] arr3 = null; 
		double[] number2 = null;
		
//		4) 이후 arr3 = new 자료형[ ] {값1, 값2, 값3}; 으로 나중에 배열을 초기화 해준다.
//		(이때 RAM에 메모리가 저장된다.)
		// 정수형 배열변수 number3를 만들자.
		int[] number3 = null;
		number3 = new int[] {1,2,3,4,5};
		
		System.out.println(number1);
		System.out.println(alpha);
		System.out.println(number2);
		System.out.println(number3);
		
		
		
		
	}
}
